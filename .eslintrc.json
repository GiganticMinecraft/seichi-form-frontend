{
  "extends": ["next/core-web-vitals", "plugin:import/recommended", "plugin:import/typescript"],
  "rules": {
    "import/order": [
      "error",
      {
        "groups": [
          "builtin",
          "external",
          "internal",
          [
            "index",
            "sibling",
            "parent"
          ],
          "object",
          "type"
        ],
        "pathGroupsExcludedImportTypes": [
          "builtin"
        ],
        "alphabetize": {
          "order": "asc",
          "caseInsensitive": true
        },
        "pathGroups": [
          {
            "pattern": "@",
            "group": "internal",
            "position": "before"
          }
        ]
      }
    ]
  },
  "settings": {
    "import/resolver": {
      "typescript": true
    }
  }
}
